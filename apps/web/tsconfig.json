{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./design/block/*"
      ],
      "#/*": [
        "./design/style/*"
      ],
      "&/*": [
        "./design/layout/*"
      ],
      "m/*": [
        "./design/mdx/*"
      ],
      "$/*": [
        "./utils/*"
      ],
      "~/*": [
        "./data/*"
      ],
      "content": [
        "./.contentlayer/generated"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
